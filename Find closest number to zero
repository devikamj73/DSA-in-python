class Solution:
    def findClosestNumber(self, nums: List[int]) -> int:
        closest = nums[0]
        #O(n)
        for x in nums:
            if abs(x) < abs(closest):
                closest = x
        #O(n)
        if closest and abs(closest) in nums:
            return abs(closest)
        
        return closest

        #time complexity = O(n)
        
